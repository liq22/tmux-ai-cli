{
  "name": "vscode-tmux-ai",
  "displayName": "Tmux AI",
  "description": "Production-grade VS Code integration for tmux-ai-cli (multi-session, multi-client, passive sync).",
  "version": "0.0.1",
  "publisher": "tmux-ai",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:tmuxAi.sessions",
    "onCommand:tmuxAi.refresh",
    "onCommand:tmuxAi.selectCliPath",
    "onCommand:tmuxAi.session.create",
    "onCommand:tmuxAi.session.connect",
    "onCommand:tmuxAi.session.newClient",
    "onCommand:tmuxAi.session.rename",
    "onCommand:tmuxAi.session.kill",
    "onCommand:tmuxAi.session.detachAll",
    "onCommand:tmuxAi.orphan.closeTerminal",
    "onCommand:tmuxAi.orphan.closeAll"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tmuxAi",
          "title": "Tmux AI",
          "icon": "resources/tmux-ai.svg"
        }
      ]
    },
    "views": {
      "tmuxAi": [
        {
          "id": "tmuxAi.sessions",
          "name": "Sessions"
        }
      ]
    },
    "commands": [
      {
        "command": "tmuxAi.refresh",
        "title": "Tmux AI: Refresh Sessions",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "tmuxAi.selectCliPath",
        "title": "Tmux AI: Select CLI Path"
      },
      {
        "command": "tmuxAi.session.create",
        "title": "Tmux AI: New Session",
        "icon": {
          "light": "resources/light/create-session.svg",
          "dark": "resources/dark/create-session.svg"
        }
      },
      {
        "command": "tmuxAi.session.connect",
        "title": "Tmux AI: Connect",
        "icon": {
          "light": "resources/light/connect.svg",
          "dark": "resources/dark/connect.svg"
        }
      },
      {
        "command": "tmuxAi.session.newClient",
        "title": "Tmux AI: New Client",
        "icon": {
          "light": "resources/light/new-client.svg",
          "dark": "resources/dark/new-client.svg"
        }
      },
      {
        "command": "tmuxAi.session.rename",
        "title": "Tmux AI: Rename Session",
        "icon": {
          "light": "resources/light/rename.svg",
          "dark": "resources/dark/rename.svg"
        }
      },
      {
        "command": "tmuxAi.session.detachAll",
        "title": "Tmux AI: Detach All Clients",
        "icon": {
          "light": "resources/light/detach.svg",
          "dark": "resources/dark/detach.svg"
        }
      },
      {
        "command": "tmuxAi.session.kill",
        "title": "Tmux AI: Kill Session",
        "icon": {
          "light": "resources/light/kill.svg",
          "dark": "resources/dark/kill.svg"
        }
      },
      {
        "command": "tmuxAi.orphan.closeTerminal",
        "title": "Tmux AI: Close Orphaned Terminal",
        "icon": {
          "light": "resources/light/close.svg",
          "dark": "resources/dark/close.svg"
        }
      },
      {
        "command": "tmuxAi.orphan.closeAll",
        "title": "Tmux AI: Clean Orphaned Terminals",
        "icon": {
          "light": "resources/light/clean.svg",
          "dark": "resources/dark/clean.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tmuxAi.refresh",
          "when": "view == tmuxAi.sessions",
          "group": "navigation"
        },
        {
          "command": "tmuxAi.session.create",
          "when": "view == tmuxAi.sessions",
          "group": "navigation"
        },
        {
          "command": "tmuxAi.orphan.closeAll",
          "when": "view == tmuxAi.sessions && tmuxAi.hasOrphaned",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tmuxAi.session.create",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.type",
          "group": "inline"
        },
        {
          "command": "tmuxAi.session.connect",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.session",
          "group": "inline"
        },
        {
          "command": "tmuxAi.session.newClient",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.session",
          "group": "inline"
        },
        {
          "command": "tmuxAi.session.rename",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.session",
          "group": "inline"
        },
        {
          "command": "tmuxAi.session.detachAll",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.session",
          "group": "inline"
        },
        {
          "command": "tmuxAi.session.kill",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.session",
          "group": "inline"
        },
        {
          "command": "tmuxAi.orphan.closeAll",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.orphanedGroup",
          "group": "inline"
        },
        {
          "command": "tmuxAi.orphan.closeTerminal",
          "when": "view == tmuxAi.sessions && viewItem == tmuxAi.orphanedTerminal",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Tmux AI",
      "properties": {
        "tmuxAi.cliPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the tmux-ai-cli executable (ai)."
        },
        "tmuxAi.discovery.searchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "~/.local/bin/ai",
            "~/bin/ai",
            "/usr/local/bin/ai",
            "/usr/bin/ai"
          ],
          "description": "Candidate paths to probe when tmuxAi.cliPath is not set."
        },
        "tmuxAi.namingPattern": {
          "type": "string",
          "default": "{type}-{n}",
          "description": "Auto naming pattern used by the extension when creating sessions."
        },
        "tmuxAi.passiveSync.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Refresh sessions silently when VS Code regains focus."
        },
        "tmuxAi.terminal.nameFormat": {
          "type": "string",
          "default": "AI: {shortName}",
          "description": "Terminal name format for the primary client."
        },
        "tmuxAi.terminal.multiClientNameFormat": {
          "type": "string",
          "default": "AI: {shortName} ({k})",
          "description": "Terminal name format for additional clients (k starts from 2)."
        },
        "tmuxAi.terminal.useProfileFallback": {
          "type": "boolean",
          "default": false,
          "description": "Allow writing workspace .vscode/settings.json as a fallback for terminal appearance."
        },
        "tmuxAi.confirm.destructiveActions": {
          "type": "boolean",
          "default": true,
          "description": "Confirm before destructive actions (kill, detach-all, clean orphaned terminals)."
        },
        "tmuxAi.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logs in the extension."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.87.0",
    "typescript": "^5.0.0"
  }
}
